<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbars"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/logo_text"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="26sp"
                android:text="@string/app_name"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/toolbars"
        android:layout_marginTop="50sp"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/ic_launcher_round"
        android:layout_height="80sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/calc"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/buttonstyle"
        android:layout_marginBottom="6sp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="15sp"
            android:layout_marginLeft="10sp"
            android:background="#10CE18"
            android:layout_height="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Completed :"
            android:layout_marginLeft="10sp"
            android:textColor="#10CE18"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:text="00"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

  <LinearLayout
    android:id="@+id/goinglay"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="30sp"
    android:background="@drawable/buttonstyle"
    android:layout_below="@+id/calc"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="15sp"
        android:background="#F73B05"
        android:layout_height="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="On Going :"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textColor="#F73B05"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/going"
          android:layout_width="wrap_content"
          android:text="00"
          android:layout_marginLeft="10sp"
          android:textColor="@color/white"
          android:layout_height="wrap_content" />

  </LinearLayout>

    <LinearLayout
        android:id="@+id/come"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:gravity="center"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/goinglay"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="15sp"
            android:layout_marginLeft="10sp"
            android:background="#FA0A5C"
            android:layout_height="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Up Coming :"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:textColor="#FA0A5C"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/coming"
            android:layout_width="wrap_content"
            android:text="00"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Poddar and Sons  Constructon Planner Pvt.ltd"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Ranchi, Ashok Nagar "
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>